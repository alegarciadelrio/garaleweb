<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Garale - Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding-top: 2rem; }
        .result-card {
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 1.5rem;
            margin-bottom: 1rem;
            background-color: #f8f9fa;
        }
        .result-value {
            font-size: 1.25rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
        .result-unit {
            color: #6c757d;
            font-size: 0.875rem;
        }
        .back-button {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4"><%= results.title %></h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <% if (results.values) { %>
                    <div class="result-card">
                        <% for (const [label, value] of Object.entries(results.values)) { %>
                            <div class="mb-3">
                                <div class="result-value">
                                    <%= label %>: <%= value %> <%= results.unit %>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } else { %>
                    <div class="result-card">
                        <div class="result-value">
                            <%= results.value %> <%= results.unit %>
                        </div>
                    </div>
                <% } %>
                
                <div class="text-center back-button">
                    <a href="/" class="btn btn-primary btn-lg">Calculate Another</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
